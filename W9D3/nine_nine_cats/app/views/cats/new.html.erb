<form action="<%= new_cat_url %>" method="post">

<label for="cat_name">Name</label>
<input 
type= "text"
name= "cat[name]"
id= "cat_name"
>

<br>
<label for="cat_birth_day">Birthday</label>
<input 
type= "date"
name= "cat[birth_date]"
id= "cat_birth_day"
>

<br>
<label for="cat_color">Color</label>
<select name="cat[color]" id="cat_color">
    <option disabled selected>select a color</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="bald">Bald</option>
    <option value="tabby">Tabby</option>
</select>

<br>
<label for="cat_sex_male">Male</label>
<input
value = 'M' 
type="radio"
name = "cat[sex]"
id = cat_sex_male
>

<label for="cat_sex_female">Female</label>
<input
value = 'F' 
type="radio"
name = "cat[sex]"
id = cat_sex_female
>

<br>
<label for="cat_description">Description
<textarea name= "cat[description]"><%= @cat.description %></textarea>
</label>

<br>
<button>Submit</button>
    
</form>

