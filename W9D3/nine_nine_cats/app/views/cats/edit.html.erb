<form action="<%= new_cat_url %>" method="post">
<input type="hidden" name="_method" value= "patch">

<label for="cat_name">Name</label>
<input 
type= "text"
name= "cat[name]"
id= "cat_name"
value = "<%= @cat.name %>"
>

<br>
<label for="cat_birth_day">Birthday</label>
<input 
type= "date"
name= "cat[birth_date]"
id= "cat_birth_day"
value = "<%= @cat.birth_date %>"
>

<br>
<label for="cat_color">Color</label>
<select name="cat[color]" id="cat_color">
    <option selected disabled><%= @cat.color.capitalize %></option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="bald">Bald</option>
    <option value="tabby">Tabby</option>
</select>
<br>
<% if @cat.sex = "M" %>
<label for="cat_sex_male">Male</label>
<input
value = 'M' 
checked = "true" 
type="radio"
name = "cat[sex]"
id = cat_sex_male
>
<label for="cat_sex_female">Female</label>
<input
value = "F"
type="radio"
name = "cat[sex]"
id = cat_sex_female
>
<% else %>

<label for="cat_sex_male">Male</label>
<input
value = 'M' 
type="radio"
name = "cat[sex]"
id = cat_sex_male
>
<label for="cat_sex_female">Female</label>
<input
value = "F"
type="radio"
checked = "true"
name = "cat[sex]"
id = cat_sex_female
>
<% end %>

<br>
<label>Description
<textarea name= "cat[description]"><%= @cat.description %></textarea>
</label>
    <br>
    <button>Update</button>
</form>
